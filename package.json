{
    "name": "next-introspect",
    "version": "0.3.15",
    "description": "Project introspection tool that analyzes routing structures and generates detailed metadata, supports Next.js for now",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "next-introspect": "bin/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts src/cli.ts --format esm --dts",
        "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch",
        "type-check": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "commander": "^11.1.0",
        "chalk": "^5.3.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@vitest/coverage-v8": "^1.0.0",
        "tsup": "^8.0.1",
        "typescript": "^5.9.0",
        "vitest": "^1.0.0"
    },
    "keywords": [
        "nextjs",
        "introspection",
        "routing",
        "analysis",
        "cli",
        "app-router",
        "pages-router"
    ],
    "author": "Company Manager Team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/benfavre/next-introspect.git"
    },
    "homepage": "https://benfavre.github.io/next-introspect/",
    "bugs": {
        "url": "https://github.com/benfavre/next-introspect/issues"
    },
    "docs": "https://benfavre.github.io/next-introspect/",
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "dist",
        "bin",
        "readme.md"
    ]
}